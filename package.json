{
  "name": "cs2overlay",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "dev:web": "turbo dev --filter=@cs2overlay/web",
    "dev:server": "turbo dev --filter=@cs2overlay/server",
    "build:web": "turbo build --filter=@cs2overlay/web",
    "build:server": "turbo build --filter=@cs2overlay/server",
    "build:shared": "turbo build --filter=@cs2overlay/shared",
    "dev:desktop": "turbo dev --filter=@cs2overlay/desktop"
  },
  "devDependencies": {
    "turbo": "^2",
    "typescript": "^5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
